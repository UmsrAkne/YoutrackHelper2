<UserControl
    x:Class="YoutrackHelper2.Views.IssueList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:viewModels="clr-namespace:YoutrackHelper2.ViewModels"
    d:DataContext="{d:DesignInstance viewModels:IssueListViewModel}"
    d:DesignWidth="500"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ControlTemplate x:Key="ToggleButtonTemplate" TargetType="ToggleButton">
            <Border
                Padding="4,2"
                Background="{TemplateBinding Background}"
                BorderBrush="DimGray"
                BorderThickness="1"
                CornerRadius="3">
                <ContentPresenter />
            </Border>

            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value=" Moccasin" />
                </Trigger>

                <Trigger Property="IsMouseOver" Value="False">
                    <Setter Property="Background" Value=" PapayaWhip" />
                </Trigger>

                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="SandyBrown" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </UserControl.Resources>
    <Grid>
        <ListView
            HorizontalContentAlignment="Stretch"
            AlternationCount="2"
            ItemsSource="{Binding IssueWrappers}">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <DataTemplate.Resources>
                        <system:Double x:Key="BasicFontsize">15.0</system:Double>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontSize" Value="{StaticResource BasicFontsize}" />
                        </Style>
                    </DataTemplate.Resources>

                    <Border Padding="3,0">
                        <Grid>

                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="0"
                                Orientation="Horizontal">

                                <CheckBox
                                    Margin="3,0"
                                    VerticalAlignment="Center"
                                    IsChecked="{Binding Completed}" />
                                <TextBlock Text="{Binding Title}" />
                            </StackPanel>

                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">

                                <TextBlock
                                    Margin="3,0"
                                    HorizontalAlignment="Right"
                                    Text="{Binding ShortName}" />

                                <ToggleButton
                                    Width="50"
                                    Margin="5,0"
                                    HorizontalContentAlignment="Center"
                                    Template="{StaticResource ToggleButtonTemplate}">
                                    <TextBlock
                                        FontSize="12"
                                        Text="完了"
                                        TextAlignment="Center" />
                                </ToggleButton>

                            </StackPanel>

                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Margin="15,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Description}" />
                                </StackPanel>

                                <TextBox Margin="0,2" />
                            </StackPanel>
                        </Grid>

                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Style.Triggers>
                        <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                            <Setter Property="Background" Value="Transparent" />
                        </Trigger>

                        <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                            <Setter Property="Background" Value="AntiqueWhite" />
                        </Trigger>

                        <Trigger Property="IsSelected" Value="true">
                            <Setter Property="Background" Value="LightSalmon" />
                        </Trigger>
                    </Style.Triggers>

                    <Style.Setters>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Border
                                        x:Name="Border"
                                        Padding="3,1"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="2">

                                        <ContentPresenter />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style.Setters>

                </Style>
            </ListView.ItemContainerStyle>

        </ListView>
    </Grid>
</UserControl>